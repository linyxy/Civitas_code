<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	<!-- 名字&头像显示区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >
		<!-- name -->
        <TextView 
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!-- icon -->
        <ImageButton 
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/normalPaddingLeft"
        android:stretchColumns="1" >

        <!-- 等级与经验 -->
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/normalTextSize"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/user_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/normalTextSize"/>
        </TableRow>
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/normalTextSize" 
                android:text="精力"/>
			<!-- 用来显示精力长度 -->
            <ProgressBar
                android:id="@+id/energy_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:indeterminate="true"/>
            <!-- 精力值 -->
            <TextView 
                android:id="@+id/energy_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
       	<TableRow 
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textSize="@dimen/normalTextSize" 
             android:text="快乐"/>
		<!-- 用来显示长度 -->
       <ProgressBar
           android:id="@+id/happy_bar"
           style="?android:attr/progressBarStyleHorizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:indeterminate="true"/>
       <!-- 快乐值 -->
       <TextView 
           android:id="@+id/happy_points"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
	   </TableRow>
       <TableRow 
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="@dimen/normalTextSize" 
               android:text="健康"/>
		<!-- 用来显示健康长度 -->
           <ProgressBar
               android:id="@+id/health_bar"
               style="?android:attr/progressBarStyleHorizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:indeterminate="true"/>
           <!-- 健康值 -->
           <TextView 
               android:id="@+id/health_points"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </TableRow>
       <TableRow 
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="@dimen/normalTextSize" 
               android:text="饥饿"/>
		  <!-- 用来显示饥饿长度 -->
          <ProgressBar
               android:id="@+id/hunger_bar"
               style="?android:attr/progressBarStyleHorizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:indeterminate="true"/>
           <!-- 饥饿值 -->
           <TextView 
               android:id="@+id/hunger_points"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
